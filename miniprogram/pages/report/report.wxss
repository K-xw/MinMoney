.content {
}

.com-sContent {
    background: white;
    font-size: 16px;
    position: relative;
    height: 30px;
    line-height: 30px;
    width: 25%;
}

.com-sImg {
    position: absolute;
    left: 50px;
    top: 7px;
    width: 20px;
    height: 14px;
    transition: all 0.3s ease;
}

.com-sTxt {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 20px 0 20px;
    font-size: 14px;
}

