.conclusion {
  margin: 60rpx auto;
  text-align: center;
  color: #d8d4d3;
  padding: 0 auto;
}

a.weui-btn.weui-btn_primary.sure_btn:visited,a.weui-btn.weui-btn_primary.category_btn:visited{background-color:#eee;} 
a.weui-btn.weui-btn_primary.sure_btn:hover,a.weui-btn.weui-btn_primary.category_btn:hover{background-color:#eee;} 
a.weui-btn.weui-btn_primarysss.sure_btn:active,a.weui-btn.weui-btn_primary.category_btn:active{background-color:#eee;}
